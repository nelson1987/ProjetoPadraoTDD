@model WebForLink.Web.ViewModels.EnderecoTesteVM

@if (Model != null)
{
    using (Html.BeginCollectionItem("EnderecoList"))
    {
        <div class="row" style="margin-bottom: 15px;">
            <div class="col-md-6" style="height:350px;">
                <div class="notice notice-success">
                    <div class="notice-header notice-header-success">
                        @if (Model.EnderecoReceita)
                        {
                            <h3 class="notice-title">Obtido na Receita Federal</h3>
                        }
                        else
                        {
                            <h3 class="notice-title">Comercial</h3>
                        }
                        <span class="notice-subtitle pull-right">
                            <i class="fa fa-check-square-o" style="color:#00a65a;">&nbsp;</i>
                        </span>
                    </div>
                    <div class="notice-body">
                        <div class="col-lg-12">
                            @Html.HiddenFor(x => x.Id)

                            @if (!string.IsNullOrEmpty(Model.CEP))
                    {
                                <div class="col-xs-2 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.CEP)<br />
                                        @Html.DisplayFor(x => x.CEP, new { @class = "form-control input-sm cepMask", maxlength = "9" })
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Endereco))
                    {
                                <div class="col-xs-4 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Endereco)<br />
                                        @Html.DisplayFor(x => x.Endereco, new { @class = "form-control input-sm enderecoTxt", maxlength = "255" })
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Numero))
                    {
                                <div class="col-xs-4 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Numero)<br />
                                        @Html.DisplayFor(x => x.Numero, new { @class = "form-control input-sm numeroTxt", maxlength = "50" })
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Endereco))
                    {
                                <div class="col-xs-4 col-md-4">
                                    <div class="form-group">
                                        <label>Estado</label><br />
                                        @*@Html.DropDownListFor(x => x.T_UF.UF_SGL, (SelectList)ViewBag.UF, "Selecione o Estado", new { @class = "form-control input-sm estadoTxt" })*@
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Cidade))
                    {
                                <div class="col-xs-4 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Cidade)<br />
                                        @Html.DisplayFor(x => x.Cidade, new { @class = "form-control input-sm cidadeTxt", maxlength = "100" })
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Bairro))
                    {
                                <div class="col-xs-4 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Bairro)<br />
                                        @Html.DisplayFor(x => x.Bairro, new { @class = "form-control input-sm bairroTxt", maxlength = "100" })
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Complemento))
                    {
                                <div class="col-xs-8 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Complemento)<br />
                                        @Html.DisplayFor(x => x.Complemento, new { @class = "form-control input-sm complementoTxt", maxlength = "255" })
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Longitude))
                    {
                                <div class="col-xs-8 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Longitude)<br />
                                        <span class="LongitudeTxt">
                                            @Html.DisplayFor(x => x.Longitude, new { @class = "form-control input-sm LongitudeTxt", maxlength = "255" })
                                        </span>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Latitude))
                    {
                                <div class="col-xs-8 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.Latitude)<br />
                                        <span class="LatitudeTxt">
                                            @Html.DisplayFor(x => x.Latitude, new { @class = "form-control input-sm LatitudeTxt", maxlength = "255" })
                                        </span>
                                    </div>
                                </div>
                            }
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map" id="mapa" style="width:100%; height:350px;">
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    }
}
