@model WebForLink.Web.ViewModels.WebForLink.FichaCadastralWebForLinkVM

@Styles.Render("~/style/date")
@Scripts.Render("~/bundles/date")

@*@{
    bool SolicitaDocumentos = ViewBag.SolicitaDocumentos;
    bool solicitaFichaCadastral = ViewBag.solicitaFichaCadastral;
}*@


<script type="text/javascript">
    $(document).ready(function () {
        
    });
</script>



<section class="content-header">
    <h1>
        Cadastro de Fornecedores
        <!-- small>Control panel</!--small -->
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-envelope"></i> Fornecedores</li>
        <li class="active">Cadastro de Fornecedores</li>
    </ol>
</section>


<!-- FORM -->
<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="text-center">
                <h4>Modificar Dados Fiscais</h4>
            </div>
        </div><!-- /.box-body -->
    </div><!-- /.box -->

    <div id="boxGrid" class="box box-primary">
        <div class="box-body">
            <h4>Empresa: <small>@Model.NomeEmpresa</small></h4>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
    @using (Html.BeginForm("FornecedoresModificacaoDadosFiscaisFrm", "Fornecedores"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.ContratanteID)
        @Html.HiddenFor(model => model.NomeEmpresa)
        @Html.HiddenFor(model => model.CNPJ_CPF)
        @Html.HiddenFor(model => model.RazaoSocial)
        @Html.HiddenFor(model => model.NomeFantasia)
        @Html.HiddenFor(model => model.CNAE)
        @Html.HiddenFor(model => model.InscricaoEstadual)
        @Html.HiddenFor(model => model.InscricaoMunicipal)

        @********** DADOS GERAIS **********@
        @Html.Partial("_FichaCadastral_DadosGerais", Model)


        @********** DADOS BANCARIOS NOVOS **********@
        @Html.Partial("_FichaCadastral_DadosFiscais_Editavel", Model)

    <div class="box box-primary">

        <div class="box-body">
            <div class="text-center text-nowrap">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("FornecedoresModificacaoFrm", new { chaveurl = ViewBag.ChaveUrl })'">Voltar</button>
                <button type="button" class="btn btn-primary" onclick="$('#alert_confirm span').text('Tem certeza que deseja Solicitar as alterações dos Dados Fiscais?'); $('#alert_confirm').fadeIn('fast');">Enviar</button>
            </div>

            <div id="alert_confirm" class="alert alert-warning" role="alert" style="display: none;">
                <span></span>&nbsp;&nbsp;&nbsp;&nbsp;
                <button type="submit" class="btn btn-primary btn-xs">Sim</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-default btn-xs" onclick="$('#alert_confirm').fadeOut('fast');">Não</button>
            </div>
        </div>
    </div>
    }
</section>
