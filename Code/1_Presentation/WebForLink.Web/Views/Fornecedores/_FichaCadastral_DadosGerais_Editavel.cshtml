@using WebForLink.Domain.Enums

@model WebForLink.Web.ViewModels.WebForLink.FichaCadastralWebForLinkVM

@{bool estrangeiro = false;}

@if (Model != null)
{
    if (Model.TipoFornecedor == (int)EnumTiposFornecedor.EmpresaEstrangeira)
    {
        estrangeiro = true;
    }
}
@if (Model != null)
{
    <div id="boxGrid" class="box box-primary">
        <div class="box-header"><h3 class="box-title">Dados Gerais</h3></div>
        <div class="box-body">
            @if (!estrangeiro)
            {
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.CNPJ_CPF, htmlAttributes: new { @class = "control-label" })
                    &nbsp;<span class="text-danger" style="font-weight:bold;">*</span><br />
                    @Html.TextBoxFor(model => model.CNPJ_CPF, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.CNPJ_CPF, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            }
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.RazaoSocial, htmlAttributes: new { @class = "control-label" })
                    @if (estrangeiro)
                    {
                        <span class="text-danger" style="font-weight:bold;">*</span><br />
                    }
                    @Html.TextBoxFor(model => model.RazaoSocial, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.RazaoSocial, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeFantasia, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.NomeFantasia, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.NomeFantasia, "", new { @class = "text-danger" })
                </div>
            </div>
            @if (!estrangeiro)
            {
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CNAE, htmlAttributes: new { @class = "control-label" }) <br />
                        @Html.TextBoxFor(model => model.CNAE, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.CNAE, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.InscricaoEstadual, htmlAttributes: new { @class = "control-label" })
                        &nbsp;
                        @if(Model.TipoFornecedor != 3)
                        { 
                            <span class="text-danger" style="font-weight:bold;">*</span><br />
                        }
                        @Html.TextBoxFor(model => model.InscricaoEstadual, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.InscricaoEstadual, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.InscricaoMunicipal, htmlAttributes: new { @class = "control-label" })
                        &nbsp;
                        @if (Model.TipoFornecedor != 3)
                        {
                            <span class="text-danger" style="font-weight:bold;">*</span><br />
                        }
                        @Html.TextBoxFor(model => model.InscricaoMunicipal, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.InscricaoMunicipal, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
}

