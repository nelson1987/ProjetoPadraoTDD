@model WebForLink.Web.ViewModels.ProrrogacaoPrazoVM

<script type="text/javascript">
    $(document).ready(function () {
        $("#StDataProrrogacao").datepicker();
    });
</script>

<!-- Main content -->
@using (Html.BeginForm("SolicitacaoEnviar"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.Fornecedor.CNPJ)
    @Html.HiddenFor(x => x.Fornecedor.Contato.Nome)
    @Html.HiddenFor(x => x.Fornecedor.Contato.Email)
    <div class="clearfix"></div>
    <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(x => x.DataProrrogacao, htmlAttributes: new { @class = "control-label" })
            <span class="text-danger" style="font-weight:bold;">*</span><br />
            @Html.TextBoxFor(x => x.StDataProrrogacao, new { @class = "form-control input-sm", data_inputmask = "'alias': 'dd/mm/yyyy'", data_mask = "" })            
            @Html.ValidationMessageFor(x => x.StDataProrrogacao, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(x => x.Motivo, htmlAttributes: new { @class = "control-label" })
            <span class="text-danger" style="font-weight:bold;">*</span><br />
            @Html.TextAreaFor(x => x.Motivo, new { @class = "form-control input-sm", disable_input = "" })
            @Html.ValidationMessageFor(x => x.Motivo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="clearfix"></div>
}
