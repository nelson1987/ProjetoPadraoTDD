@using WebForLink.Web.Helpers
@using WebForLink.Web.ViewModels
@model List<IDadosEnderecoVM>

<div id="boxGridDadosEnderecos" class="box box-primary">
    @Html.BoxLoading()
    <div class="box-header">
        <h3 class="box-title">Dados Enderecos</h3>
    </div>
    <div class="box-body">
        <div id="dvEnderecos">
            @foreach (var Endereco in Model)
            {
                switch (Endereco.Tipo)
                {
                    case TiposDadosEndereco.ObtidoReceita:
                        @Html.Partial("~/Views/Ficha/Partials/_EnderecoReceita.cshtml", Endereco)
                        break;
                    case TiposDadosEndereco.Comercial:
                    case TiposDadosEndereco.Residencial:
                        @Html.Partial("~/Views/Ficha/Partials/_EnderecoFornecedor.cshtml", Endereco)
                        break;
                    default:
                        @Html.Partial("~/Views/Ficha/Partials/_IncluirEndereco.cshtml", Endereco)
                        break;
                }
            }
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="border-top: 1px solid #dddddd; padding-top: 7px;">
            <button type="button" class="btn btn-default" id="btnAdicionarEndereco" disable-input="">Adicionar Endereço</button>
        </div>
        <br>
        <div class="text-right text-nowrap hidden">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="button" class="btn btn-danger" onclick=" cancelarDados('DadosEnderecos', '/DadosEnderecos/Cancelar'); ">Cancelar</button>
        </div>
        <div class="clearfix"></div>
    </div>
</div>