@using WebForLink.Web.Helpers
@using WebForLink.Web.ViewModels
@model ICollection<DadosBancarioVM>
<div id="boxGridDadosBancarios" class="box box-primary">
    @Html.BoxLoading()
    <div class="box-header">
        <h3 class="box-title">Dados Bancários</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-default" onclick=" incluirDados('DadosBancarios', '/DadosBancarios/Incluir'); " disable-input="">Adicionar Dados Bancários</button>&nbsp;
            <span type="button" class="btn btn-adicionar" data-widget="collapse">
                <i class="fa fa-plus"></i>
            </span>&nbsp;
            <span type="button" class="btn btn-minimizar" data-widget="collapse">
                <i class="fa fa-sort-desc"></i>
            </span>
        </div>
    </div>
    <div class="box-body">
        @foreach (DadosBancarioVM item in Model)
        {
            @Html.Partial("~/Views/Ficha/Partials/_BancoFornecedor.cshtml", item)
        }
        <div class="clearfix"></div>
        <div class="form-group" style="padding-top: 7px;">
            <button type="button" class="btn btn-default" onclick=" incluirDados('DadosBancarios', '/DadosBancarios/Incluir'); " disable-input="">Adicionar Dados Bancários</button>
        </div>
        <br>
        <div class="clearfix"></div>
    </div>
</div>