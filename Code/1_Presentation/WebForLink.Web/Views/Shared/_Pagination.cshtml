@model  WebForLink.Web.Infrastructure.PaginacaoModel
<br />
@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <span onclick="paginacao(null);" style="cursor:pointer"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Primeira</span>
            </li>
                <li>
                    <span onclick="paginacao(@(Model.CurrentPage - 1));" style="cursor:pointer"><i class="fa fa-angle-left" aria-hidden="true"></i> Anterior</span>
                </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <span onclick="paginacao(@page);" style="cursor:pointer">@page</span>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <span onclick="paginacao(@(Model.CurrentPage + 1));" style="cursor:pointer">Próxima <i class="fa fa-angle-right" aria-hidden="true"></i></span>
            </li>
                <li>
                    <span onclick="paginacao(@(Model.TotalPages));" style="cursor:pointer">Última <i class="fa fa-angle-double-right" aria-hidden="true"></i></span>
                </li>
        }
    </ul>

}

@if (Model.TotalItems > 0)
{
    <div class="clearfix"></div>
        <span>Total de registro:</span> <label>@Model.TotalItems</label>
}
<script type="text/javascript">
    function paginacao(pagina) {
        $('#Filtro_Pagina').val(pagina);
        $('form').submit();
    }
</script>
