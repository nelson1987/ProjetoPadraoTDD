@using WebForLink.Web.Infrastructure
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>WebForLink</title>
    @Styles.Render("~/style/site")
    @Styles.Render("~/style/azul")
    @*@Scripts.Render("~/bundles/modernizr")*@

    @*@if (!Request.UserAgent.Contains("MSIE 8.0") && !Request.UserAgent.Contains("MSIE 7.0") && !Request.UserAgent.Contains("MSIE 6.0"))
    {
        @Scripts.Render("~/bundles/jquery-2.x")
    }
    else
    {*@
        @Scripts.Render("~/bundles/jquery")
    @*}*@

    @Styles.Render("~/style/date")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js.js"></script>

        <style>
            .knob {
                display: none;
            }
        </style>

    <![endif]-->
    <!--[if lt IE 8]>
        <script>
            location.href = 'Compatibilidade.html'
        </script>
    <![endif]-->
    @RenderSection("header", required: false)

    <style>
        .logo-rodape {
            position: fixed;
            bottom: 2px;
            width: 220px;
            background-color: #f1f1f2;
            padding-left: 5px;
        }
    </style>
</head>
<body class="skin-blue">
    <div class="aguarde">
        <div>
            <i class="fa fa-refresh fa-spin"></i> Aguarde...
        </div>
    </div>
    <header class="header">
        <div class="nome-cliente-mobile col-md-12">
            <img src="~/Content/images/webforlink3_171x35_ed.png" />
        </div>
        <nav class="navbar navbar-static-top" role="navigation">
            <div class="col-xs-1 col-md-1">
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="navbar-right" style="padding-right: 20px;">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu dropdown-li-custom">
                        <a href="#" class="dropdown-toggle dropdown-a-custom" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span><i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu" style="width: auto;">
                            <li class="user-footer">
                                <div class="user-footer text-center">
                                    <a href="@Url.Action("Index", new { area = "", controller = "Home" })" class="btn btn-default btn-flat">Sair</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- MENU -->
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <aside class="left-side sidebar-offcanvas">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="logo-cliente">
                        @if (ViewBag.Imagem == "semfoto.png" || ViewBag.Imagem == "semlogo.png")
                        {
                            <img src="~/Content/images/@ViewBag.Imagem" />
                        }
                        else
                        {
                            <img src="~/ImagensUsuarios/@ViewBag.Imagem" />
                        }
                    </div>
                </div>
                <ul class="sidebar2-menu">
                    <li>
                        <a href="@Url.Action("FichaCadastral", new { area = "", controller = "Documento", chaveurl = Model.ChaveUrl })">
                            <div>
                                <i class="fa fa-pencil-square-o"></i>Ficha Cadastral
                            </div>
                        </a>
                    </li>
                    @if (ViewBag.EhFornecedor != null)
                    {
                    <li>
                        <a href="@Url.Action("SolicitacaoDocumentos", new { area = "", controller = "Documento", chaveurl = Model.ChaveUrl })">
                            <div>
                                <i class="fa fa-envelope-o"></i>Solicitações
                            </div>
                        </a>
                    </li>
                    }
                </ul>
                <div class="logo-rodape">
                    <img src="~/Content/images/logo-ch.png" />
                </div>
            </section>
        </aside>
        <aside class="right-side">
            @RenderBody()           
        </aside>
    </div>

    @RenderSection("Footer", false)
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/date")
    @RenderSection("scripts", required: false)
</body>
</html>
