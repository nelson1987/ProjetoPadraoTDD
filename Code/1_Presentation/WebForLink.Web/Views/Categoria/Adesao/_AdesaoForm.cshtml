@model WebForLink.Web.ViewModels.Adesao.AdesaoCriacaoFormularioVM
<h2 class="text-center">Contrate</h2>

<div class="col-md-7 col-md-offset-1">
    <h3>Dados do seu plano</h3><i>Você escolheu o plano @Model.PlanoId</i>
    <div class="row">
        <div class="col-md-9">
            @using (Ajax.BeginForm("CriarAdesao", "Adesao", new AjaxOptions { HttpMethod = "POST", OnSuccess = "renderizarDadosAjaxBeginForm(data, status, 'QuestionarioDinamico')" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.EspacoSelecionado, new { @class = "control-label" })
                                @Html.DropDownListFor(x => x.EspacoSelecionado, Model.EspacoList, "-- Selecione --", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.EspacoSelecionado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UsuarioSelecionado, new { @class = "control-label" })
                                @Html.DropDownListFor(x => x.UsuarioSelecionado, Model.UsuarioList, "-- Selecione --", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.UsuarioSelecionado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6 pull-left">
                            <button type="submit" id="button1id" name="button1id" class="btn btn-xs btn-success">Contratar</button>
                            <button type="button" id="btnCancelar" name="button2id" class="btn btn-xs btn-danger">Cancelar</button>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Total, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Total, new { @class = "form-control input-sm", disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="col-md-3" style="background-color: #e8e8e8;">
    <div class="form-group">
        <h3>Calculadora</h3>
        <div>São @Model.MediaEspaçoDocumentos documentos na média. <span class="btn-link">Alterar</span></div>
    </div>
</div>
