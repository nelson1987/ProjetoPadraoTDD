@model WebForLink.Web.ViewModels.FichaCadastral.FichaCadastralDadosGeraisVM

<div id="boxGrid" class="box box-primary">
    <div class="box-header"><h3 class="box-title">Dados Gerais</h3></div>
    @if (Model != null)
    {
        <div class="box-body">
            @Html.HiddenFor(model => model.CategoriaId)

            @if (!String.IsNullOrEmpty(Model.CategoriaNome))
            {
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Categoria (Grupo Contas)</label><br />
                        <span>@Html.DisplayTextFor(model => model.CategoriaNome) &nbsp;</span>
                        @Html.HiddenFor(model => model.CategoriaNome)
                    </div>
                </div>
                <div class="clearfix"></div>
            }

            @if (Model.TipoFornecedor == 1)
            {
                <div class="col-md-2">
                    <div class="form-group">
                        <label>CNPJ</label><br />
                        <span>@Html.DisplayTextFor(model => model.CNPJ_CPF) &nbsp;</span>
                        @Html.HiddenFor(model => model.CNPJ_CPF)
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RazaoSocial)<br />
                        <span>@Html.DisplayTextFor(model => model.RazaoSocial) &nbsp;</span>
                        @Html.HiddenFor(model => model.RazaoSocial)
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeFantasia)<br />
                        <span>@Html.DisplayTextFor(model => model.NomeFantasia) &nbsp;</span>
                        @Html.HiddenFor(model => model.NomeFantasia)
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CNAE)<br />
                        <span>@Html.DisplayTextFor(model => model.CNAE) &nbsp;</span>
                        @Html.HiddenFor(model => model.CNAE)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.InscricaoEstadual)<br />
                        <span>@Html.DisplayTextFor(model => model.InscricaoEstadual) &nbsp;</span>
                        @Html.HiddenFor(model => model.InscricaoEstadual)
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.InscricaoMunicipal)<br />
                        <span>@Html.DisplayTextFor(model => model.InscricaoMunicipal) &nbsp;</span>
                        @Html.HiddenFor(model => model.InscricaoMunicipal)
                    </div>
                </div>
            }
            else if (Model.TipoFornecedor == 2)
            {
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RazaoSocial)<br />
                        <span>@Html.DisplayTextFor(model => model.RazaoSocial) &nbsp;</span>
                        @Html.HiddenFor(model => model.RazaoSocial)
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeFantasia)<br />
                        <span>@Html.DisplayTextFor(model => model.NomeFantasia) &nbsp;</span>
                        @Html.HiddenFor(model => model.NomeFantasia)
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Nome</label><br />
                        <span>@Html.DisplayTextFor(model => model.Nome) &nbsp;</span>
                        @Html.HiddenFor(model => model.Nome)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>CPF</label><br />
                        <span>@Html.DisplayTextFor(model => model.CNPJ_CPF) &nbsp;</span>
                        @Html.HiddenFor(model => model.CNPJ_CPF)
                    </div>
                </div>
                <div class="clearfix"></div>
            }
            <div class="clearfix"></div>
        </div><!-- /.box-body -->
    }
</div><!-- /.box -->
