@model WebForLink.Web.Areas.Administracao.Models.UsuarioAdministracaoModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministracao.cshtml";
}

<section class="content-header">
    <h1>Edição de @ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-envelope"></i> Acesso</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Dados do Usuário</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("UsuarioEditarFrm","Usuario"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Nome, new { @class = "control-label" }):
                                        @Html.DisplayFor(model => model.Nome)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Login, new { @class = "control-label " }):
                                        @Html.DisplayFor(model => model.Login)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CPF, new { @class = "control-label " }):
                                        @Html.DisplayFor(model => model.CPF)
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DataNascimento, new { @class = "control-label " }):
                                        @Html.DisplayFor(model => model.DataNascimento)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LoginSSO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.LoginSSO, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.LoginSSO, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Dominio, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.Dominio, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                        @Html.ValidationMessageFor(model => model.Dominio, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Administrador, new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Administrador)
                                        @Html.ValidationMessageFor(model => model.Administrador, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Ativo, new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.Ativo)
                                        @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-md-4">
                            @Html.Partial("_Perfis", Model)
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("_Papeis", Model)
                        </div>
                        <div class="clearfix"></div>
                        @*<div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Alterar" class="btn btn-default"/>
                                </div>
                            </div>*@
                        <div class="box-footer">
                            <div class="text-right text-nowrap">
                                <button type="button" class="btn btn-primary" onclick="$('#alert_confirm span').text('Tem certeza que deseja salvar esta @ViewBag.Page?'); $('#alert_confirm').fadeIn('fast');">Salvar</button>
                                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("UsuarioLst")';">Cancelar</button>
                            </div>
                            <div id="alert_confirm" class="alert alert-warning" role="alert" style="display: none;">
                                <span></span>&nbsp;&nbsp;&nbsp;&nbsp;
                                <button type="submit" class="btn btn-primary btn-xs">Sim</button>&nbsp;&nbsp;&nbsp;
                                <button type="button" class="btn btn-default btn-xs" onclick="$('#alert_confirm').fadeOut('fast');">Não</button>
                            </div>
                        </div>
                    }
                    @*<div>
                            @Html.ActionLink("Voltar", "Index")
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
