@model WebForLink.Web.Areas.Administracao.Models.FuncaoAdministracaoModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdministracao.cshtml";
}


<section class="content-header">
    <h1>
        Acompanhamento
        <!-- small>Control panel</!--small -->
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-envelope"></i> Fornecedores</li>
        <li class="active">Acompanhamento</li>
    </ol>
</section>


<!-- FORM -->
<section class="content">
    <div id="boxGrid" class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Solicitação</h3>
        </div>
        <div class="box-body">
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.Codigo)<br />
                    @Html.DisplayFor(model => model.Codigo)
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nome)<br />
                    @Html.DisplayFor(model => model.Nome)
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.Tela)<br />
                    @Html.DisplayFor(model => model.Tela)
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao)<br />
                    @Html.DisplayFor(model => model.Descricao)
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aplicacao.Nome)<br />
                    @Html.DisplayFor(model => model.Aplicacao.Nome)
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.FuncaoPaiId)<br />
                    @Html.DisplayFor(model => model.FuncaoPai.Nome)
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <div class="text-center text-nowrap">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("FuncaoLst")'">Voltar</button>
            </div>
        </div>
    </div>
</section>
