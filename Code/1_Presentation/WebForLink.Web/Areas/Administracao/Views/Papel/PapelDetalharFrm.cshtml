@model WebForLink.Web.Areas.Administracao.Models.PapelAdministracaoModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdministracao.cshtml";
}


<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-envelope"></i> @ViewBag.Page</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Dados da @ViewBag.Page</h3>
                </div>
                <div class="box-body">
                    @Html.HiddenFor(model => model.Id)
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, new {@class = "control-label"})<br/>
                            @Html.DisplayFor(model => model.Nome, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sigla, new { @class = "control-label " })<br />
                            @Html.DisplayFor(model => model.Sigla, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Contratante.RazaoSocial, new { @class = "control-label " })<br />
                            @Html.DisplayFor(model => model.Contratante.RazaoSocial, new {htmlAttributes = new {@class = "form-control"}})
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="box box-primary">
                <div class="box-body">
                    <div class="text-center text-nowrap">
                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("PapelLst", "Papel")' ">Voltar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>