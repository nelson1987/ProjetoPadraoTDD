@{
    var Estilo = "azul";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>@HttpContext.Current.Application["NomeSistema"].ToString()</title>
    @Styles.Render("~/style/bootstrap")
    @Styles.Render("~/Content/" + Estilo)
    @Scripts.Render("~/bundles/modernizr")

    @if (!Request.UserAgent.Contains("MSIE 8.0") && !Request.UserAgent.Contains("MSIE 7.0") && !Request.UserAgent.Contains("MSIE 6.0"))
    {
        @Scripts.Render("~/bundles/jquery-2.x")
    }
    else
    {
        @Scripts.Render("~/bundles/jquery-1.x")
    }
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="js/html5shiv.js"></script>
        <script src="js/respond.min.js.js"></script>

        <style>
            .knob {
                display: none;
            }
        </style>

    <![endif]-->
    <!--[if lt IE 8]>
        <script>
            location.href = 'Compatibilidade.html'
        </script>
    <![endif]-->
    @RenderSection("header", required: false)
</head>
<body class="skin-blue">
    <div class="aguarde">
        <div>
            <i class="fa fa-refresh fa-spin"></i> Aguarde...
        </div>
    </div>
    <header class="header">
        <div class="logo" style="cursor:default;">
            <img src="~/Content/images/webforlink3_200x45_ed.png" />
        </div>
        @*<div class="nome-cliente-mobile col-md-12">
                <i>NomeEmpresa</i>
            </div>*@
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <div class="col-xs-1 col-md-1">
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="nome-cliente col-md-9">
                @*<i>NomeEmpresa</i>*@
            </div>
        </nav>
    </header>
    <!-- MENU -->
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <aside class="left-side sidebar-offcanvas">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="logo-cliente">
                        @if (ViewBag.Imagem != null)
                        {
                            <img src='~/ImagensUsuarios/@ViewBag.Imagem' />
                        }
                        else
                        {
                            <img src='~/Content/images/@("semlogo.png")' />
                        }
                    </div>
                </div>
                <ul class="sidebar2-menu">
                </ul>
            </section>
        </aside>
        <aside class="right-side">
            @RenderBody()
        </aside>
    </div>
    @RenderSection("Footer", false)
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/date")
    @RenderSection("scripts", required: false)
</body>
</html>
