@model WebForLink.Web.ViewModels.WebForLink.FichaCadastralWebForLinkVM
<div class="col-md-6">
    <div class="form-group">
        @Html.LabelFor(model => model.RazaoSocial, htmlAttributes: new { @class = "control-label" })
        &nbsp;<span class="text-danger" style="font-weight:bold;">*</span><br />
        @Html.TextBoxFor(model => model.RazaoSocial, new { @class = "form-control input-sm" })
        @Html.ValidationMessageFor(model => model.RazaoSocial, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        @Html.LabelFor(model => model.NomeFantasia, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.NomeFantasia, new { @class = "form-control input-sm" })
        @Html.ValidationMessageFor(model => model.NomeFantasia, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-md-3">
    <div class="form-group">
        @Html.LabelFor(model => model.CNPJ_CPF, htmlAttributes: new { @class = "control-label" })
        &nbsp;<span class="text-danger" style="font-weight:bold;">*</span><br />
        @if (!Model.DocumentoEditavel)
        {
            @Html.HiddenFor(model => model.CNPJ_CPF)
            @Html.TextBoxFor(model => model.CNPJ_CPF, new { @class = "form-control input-sm", disabled = "disabled" })
        }
        else
        {
            @Html.TextBoxFor(model => model.CNPJ_CPF, new { @class = "form-control input-sm" })
        }
        @Html.ValidationMessageFor(model => model.CNPJ_CPF, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-md-3">
    <div class="form-group">
        @Html.LabelFor(model => model.InscricaoMunicipal, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.InscricaoMunicipal, new { @class = "form-control input-sm" })
        @Html.ValidationMessageFor(model => model.InscricaoMunicipal, "", new { @class = "text-danger" })
    </div>
</div>
